@{
    ViewData["Title"] = "The Movies";
}

@model Film_Collection.Models.MovieRatings

<div>
    <form method="post">
        <label>Category:</label>
        <input asp-for="Category" /> <br />
        <label>Movie Title:</label>
        <input asp-for="MovieTitle" /><br />
        <label>Year:</label>
        <input asp-for="Year" /><br />
        <label>Director:</label>
        <input asp-for="Director" /><br />
        <label>Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />
        <label>Edited:</label>
        <select asp-for="Edited">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select><br />
        <label>Lent To:</label>
        <input asp-for="LentTo" /><br />
        <label>Notes:</label>
        <textarea asp-for="Notes" maxlength="25"></textarea><br />

        <button type="submit">Submit</button>
    </form>
</div>